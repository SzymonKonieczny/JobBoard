@model IEnumerable<JobBoard.Models.JobOffer>

@{
    ViewBag.Title = "Browse";
}

<h2>Browse</h2>

@if (Html.TempData["WasSuccess?"] != null)
{
    <br>
     @switch (Html.TempData["WasSuccess?"])
        {
            case 0:
                <h3>Success</h3>
                break;

            case 1:
                <h3>Failed</h3>
                break;
        }
  
    <br>
}

<p>
    @Html.ActionLink("Create a new Posting", "Add")
</p>
<table class="table">
    <tr>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
                <h3>@item.Title</h3>
                <h7>@((item.OwnedBy.UserName))</h7>
                <br>
                <pre>@item.Description</pre>
            <br>

        </td>
    </tr>
}
</table>
