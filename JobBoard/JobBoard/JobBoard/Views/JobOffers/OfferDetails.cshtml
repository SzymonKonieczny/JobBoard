@model JobBoard.Models.JobOffer
@using JobBoard.Models;
@{
    ViewData["Title"] = "OfferDetails";

    var Users = ViewData.Eval("Users") as List<AccountWithApplications>;
}

<h1>OfferDetails</h1>

<div>
    <h4>JobOffer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Applicants :
        </dt>
        <dd class="col-sm-10">
            @foreach(var user in Users)
            {
                <a asp-controller="Account" asp-action="ViewAccount" asp-route-id="@user.Acc.Id">
                    @user.Acc.UserName
                </a>
 

                <br />
            }

        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
